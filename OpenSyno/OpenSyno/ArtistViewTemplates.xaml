<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<DataTemplate x:Key="ArtistViewAlbumTemplate">
        <Button Command="{Binding SelectedCommand}">
		    <Grid Width="225" Margin="0,0,6,6">
                <Image Source="{Binding Album.AlbumArtUrl}" />
                <Border VerticalAlignment="Bottom" Background="{StaticResource PhoneTextBoxBrush}">
                    <TextBlock Margin="5,2,5,2" Text="{Binding Album.Title}" Foreground="{StaticResource PhoneTextBoxForegroundBrush}" />
                </Border>
		    </Grid >
        </Button>
    </DataTemplate>
	<!-- Resource dictionary entries should be defined here. -->
</ResourceDictionary>